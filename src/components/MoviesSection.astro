---
import MoviesCarousel from "@/components/MoviesCarousel.astro";
import type { MovieResponse } from "@/models/Movie";

interface Props {
  title: string;
  category?: number;
  movies?: MovieResponse[];
}

const { title, category, movies = [] } = Astro.props;
---

<section data-category-id={category}>
  <h3 class="text-2xl font-bold px-8">{title}</h3>
  <MoviesCarousel movies={movies} />
</section>

<script src="@/assets/components/movies-section.ts"></script>

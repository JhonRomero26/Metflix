---
interface Props {
  id: string;
  class?: string;
}

const { id, class: className } = Astro.props;
---

<slot name="trigger" />

<div
  id={id}
  role="dialog"
  data-component="modal"
  class="hidden fixed inset-0 w-full bg-black/80 backdrop-blur-sm shadow-lg z-50 py-32 px-4"
>
  <div
    class={`max-w-3xl w-full mx-auto bg-neutral-900 rounded overflow-hidden ${className}`}
  >
    <slot />
  </div>
</div>

<script>
  const modals = document.querySelectorAll("[data-component=modal]");

  modals.forEach((modal) => {
    modal.addEventListener("click", (event) => {
      if (event.target === modal) {
        modal.classList.add("hidden");
      }
    });
  });
</script>
